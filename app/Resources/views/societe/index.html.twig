{% extends 'base.html.twig' %}

{% block body %}
    <h1>Societes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Rubrique</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Resume</th>
                <th>Contenu</th>
                <th>Tags</th>
                <th>Publiepar</th>
                <th>Modifiepar</th>
                <th>Publiele</th>
                <th>Modifiele</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for societe in societes %}
            <tr>
                <td><a href="{{ path('admin_societe_show', { 'id': societe.id }) }}">{{ societe.id }}</a></td>
                <td>{{ societe.rubrique }}</td>
                <td>{{ societe.titre }}</td>
                <td>{{ societe.slug }}</td>
                <td>{{ societe.resume }}</td>
                <td>{{ societe.contenu }}</td>
                <td>{{ societe.tags }}</td>
                <td>{{ societe.publiePar }}</td>
                <td>{{ societe.modifiePar }}</td>
                <td>{{ societe.publieLe }}</td>
                <td>{{ societe.modifieLe }}</td>
                <td>{% if societe.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_societe_show', { 'id': societe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_societe_edit', { 'id': societe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_societe_new') }}">Create a new societe</a>
        </li>
    </ul>
{% endblock %}
