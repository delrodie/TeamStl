{% extends 'base.html.twig' %}

{% block body %}
    <h1>Membres list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Rubrique</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Resume</th>
                <th>Contenu</th>
                <th>Tags</th>
                <th>Publiepar</th>
                <th>Modifiepar</th>
                <th>Publiele</th>
                <th>Modifiele</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td><a href="{{ path('admin_membre_show', { 'id': membre.id }) }}">{{ membre.id }}</a></td>
                <td>{{ membre.rubrique }}</td>
                <td>{{ membre.titre }}</td>
                <td>{{ membre.slug }}</td>
                <td>{{ membre.resume }}</td>
                <td>{{ membre.contenu }}</td>
                <td>{{ membre.tags }}</td>
                <td>{{ membre.publiePar }}</td>
                <td>{{ membre.modifiePar }}</td>
                <td>{{ membre.publieLe }}</td>
                <td>{{ membre.modifieLe }}</td>
                <td>{% if membre.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_membre_show', { 'id': membre.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_membre_edit', { 'id': membre.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_membre_new') }}">Create a new membre</a>
        </li>
    </ul>
{% endblock %}
