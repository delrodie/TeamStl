{% extends 'BOLayout.html.twig' %}

{% block title %}
  {{ parent() }}
  {{ phototheque.titre }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('ressources/vendor/css/photo/cubeportfolio.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('ressources/vendor/css/photo/portfolio.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
  <h1>{{ phototheque.titre }}</h1>
  <ol class="breadcrumb">
    <li>
      <a href="{{ path('homepage')}}">Accueil</a>
    </li>
    <li>
      <a href="#">phototheque</a>
    </li>
    <li class="active">{{ phototheque.titre }}</li>
  </ol>
  <!-- Sidebar Toggle Button -->
  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".page-sidebar">
    <span class="sr-only">Toggle navigation</span>
    <span class="toggle-icon">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    </span>
  </button>
  <!-- Sidebar Toggle Button -->
  </div>
  <!-- END BREADCRUMBS -->
  <!-- BEGIN SIDEBAR CONTENT LAYOUT -->
  <div class="page-content-container">
    <div class="page-content-row">
    <!-- BEGIN PAGE SIDEBAR -->
    <div class="page-sidebar">
      <nav class="navbar" role="navigation">
        <ul class="nav navbar-nav margin-bottom-35">
          <li class="active">
            <a href="{{ path('admin_phototheque_edit', { 'slug': phototheque.slug }) }}">
            <i class="fa fa-edit"></i> Modifier </a>
          </li>
        </ul>
      </nav>
    </div>
    <!-- END PAGE SIDEBAR -->
    <div class="page-content-col">
      <!-- BEGIN PAGE BASE CONTENT -->
      <div class="portfolio-content portfolio-3">
          <div id="js-filters-juicy-projects" class="cbp-l-filters-button">
            <a href="{{ phototheque.url }}" target="_blank">
              <div data-filter="*" class="cbp-filter-item-active cbp-filter-item btn dark btn-outline uppercase">
                Voir l'album complet sur Facebook 
                <div class="cbp-filter-counter"></div>
              </div>
            </a>
          </div>
          <div id="js-grid-lightbox-gallery" class="cbp">
            {% for photo in phototheque.image %}
            <div class="cbp-item web-design graphic print motion">
              <a href="#" class="cbp-caption cbp-singlePageInline" data-title="{{ phototheque.titre}}" rel="nofollow">
                <div class="cbp-caption-defaultWrap">
                  <img src="{{ asset('ressources/images/phototheque/' ~ photo.id ~ '.' ~ photo.url )}}" alt="{{ phototheque.titre }}"  />
                </div>
                <div class="cbp-caption-activeWrap">
                  <div class="cbp-l-caption-alignLeft">
                    <div class="cbp-l-caption-body">
                      <div class="cbp-l-caption-title">{{ photo.id }}</div>
                      <div class="cbp-l-caption-desc">{{ photo.description }}</div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
            {% endfor %}
          </div>
      </div>
    <!-- END PAGE BASE CONTENT -->
    </div>
  </div>
</div>
<!-- END SIDEBAR CONTENT LAYOUT -->

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{ asset('ressources/vendor/js/photo/jquery.cubeportfolio.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('ressources/vendor/js/photo/portfolio-3.min.js') }}" type="text/javascript"></script>
  <!-- END PAGE LEVEL PLUGINS -->
{% endblock %}
