{% extends 'FOLayout.html.twig' %}

{% block title %}
  {% for societe in societes %}
      {{ societe.titre }}
  {% endfor %}
{% endblock %}

{% block meta %}
  {% for societe in societes %}
  <meta name="keywords" content="{{ societe.tags }}"  />
  <meta name="description" content="{{ societe.resume }}">
  <meta property="og:locale" content="fr_FR" />
    <meta property="og:locale:alternate" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ societe.titre }}" />
    <meta property="og:description" content="{{ societe.resume }}" />
    <meta property="og:url" content="http://reseau-nzassa.org/societe/{{ societe.slug }}" />
    <meta property="og:image" content="http://www.team-stl.com{{ asset('ressources/images/logo.jpg') }}" />
    <meta property="og:site_name" content="S.A. TEAM STL" />
    <meta name="twitter:card" content="summary"/>
    <meta name="twitter:description" content="{{ societe.resume }}"/>
    <meta name="twitter:title" content="{{ societe.titre }}"/>
    <meta name="twitter:domain" content="S.A. TEAM STL"/>
    <meta property="twitter:image" content="http://www.team-stl.com{{ asset('ressources/images/logo.jpg') }}" />
  {% endfor %}
{% endblock %}

{% block body %}

{% for societe in societes %}
<!-- colonne principale -->
     <div class="medium-8 columns">
         <!-- breadcrumbs -->
       <nav aria-label="You are here:" role="navigation">
         <ul class="breadcrumbs">
           <li><a href="{{ path('homepage') }}"><i class="fa fa-home fa-lg" aria-hidden="true"></i></a></li>
           <!--<li><a href="#">Features</a></li>-->
           <li class="disabled">societe</li>
           <li>
             <span class="show-for-sr">Current: </span> {{ societe.rubrique }}
           </li>
         </ul>
       </nav>
       <!-- \breadcrumbs -->
       <div class="row">
         <div class="columns content">
           <div class="titre">{{ societe.titre }} </div>
           
             <p>
               {{ societe.contenu|raw }}
             </p>

         </div>
       </div>
     </div>
     <!-- \colonne principale -->
{% endfor %}

{% endblock %}
