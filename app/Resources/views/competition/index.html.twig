{% extends 'base.html.twig' %}

{% block body %}
    <h1>Competitions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Rubrique</th>
                <th>Titre</th>
                <th>Slug</th>
                <th>Resume</th>
                <th>Contenu</th>
                <th>Tags</th>
                <th>Datedeb</th>
                <th>Datefin</th>
                <th>Publiepar</th>
                <th>Modifiepar</th>
                <th>Publiele</th>
                <th>Modifiele</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competition in competitions %}
            <tr>
                <td><a href="{{ path('admin_competition_show', { 'id': competition.id }) }}">{{ competition.id }}</a></td>
                <td>{{ competition.rubrique }}</td>
                <td>{{ competition.titre }}</td>
                <td>{{ competition.slug }}</td>
                <td>{{ competition.resume }}</td>
                <td>{{ competition.contenu }}</td>
                <td>{{ competition.tags }}</td>
                <td>{{ competition.datedeb }}</td>
                <td>{{ competition.datefin }}</td>
                <td>{{ competition.publiePar }}</td>
                <td>{{ competition.modifiePar }}</td>
                <td>{{ competition.publieLe }}</td>
                <td>{{ competition.modifieLe }}</td>
                <td>{% if competition.statut %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_competition_show', { 'id': competition.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_competition_edit', { 'id': competition.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_competition_new') }}">Create a new competition</a>
        </li>
    </ul>
{% endblock %}
